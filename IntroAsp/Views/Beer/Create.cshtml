@model IntroAsp.Models.ViewModels.BeerViewModel;

<h1>Crear Cerveza</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@ViewBag.prueba"/>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ID_Brand" class="control-label"></label>
                <select asp-for="ID_Brand" class="form-control" asp-items="@ViewBag.Brands">
                    <option value="">Marca</option>
                </select>

                <span asp-validation-for="ID_Brand" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="crear" class="btn btn-primary"/>

            </div>
        </form>
    </div>
</div>

@section  Scripts{
    @{
       await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}